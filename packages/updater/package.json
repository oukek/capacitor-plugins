{
  "name": "@oukek/capacitor-updater",
  "version": "0.0.0",
  "description": "检测 appstore 更新版本",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources",
    "ios/Tests",
    "Package.swift",
    "OukekCapacitorUpdater.podspec"
  ],
  "author": "charlie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oukek/capacitor-plugins.git"
  },
  "bugs": {
    "url": "https://github.com/oukek/capacitor-plugins/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "pnpm run verify:ios && pnpm run verify:android && pnpm run verify:web",
    "verify:ios": "xcodebuild -scheme OukekUpdaterPlugin -destination generic/platform=iOS",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "pnpm run build",
    "lint": "pnpm run eslint && pnpm run prettier -- --check && pnpm run swiftlint -- lint",
    "fmt": "pnpm run eslint -- --fix && pnpm run prettier -- --write && pnpm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api OukekUpdater --output-readme README.md --output-json dist/docs.json",
    "build": "pnpm run clean && pnpm run docgen && pnpm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.1",
    "@capacitor/core": "^7.0.1",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.0.1",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@types/estree": "^1.0.6",
    "@types/node": "^20.17.24",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "prettier-plugin-java": "^2.6.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.35.0",
    "swiftlint": "^2.0.0",
    "typescript": "~5.8.2"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "homepage": "https://github.com/oukek/capacitor-plugins#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}